<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= cityName %>'s weather alerts
    </title>
    <style>
        .navbar .navbar-brand {
            font-weight: 700;
            font-size: 25px;

        }

        .navbar .nav-link {
            font-size: 18px;
            font-weight: 600;
            transition: 0.4s ease-in-out;

        }

        .navbar {
            font-family: 'Josefin Slab', serif;
        }

        .navbar .nav-link:hover {
            color: rgb(31, 30, 30);
            transform: translateY(-1px);
        }

        label {
            font-size: 15px;
            color: rgb(44, 43, 43);
            padding-left: 3px;
        }

        .alert {
            transition: 0.5s ease-in-out;
        }

        .alert:hover {
            cursor: pointer;
            transform: translateY(-1px);
            box-shadow: 4px 4px 6px #888888;
        }
    </style>

    <script crossorigin="anonymous" src="https://cdn.maptiler.com/maptiler-sdk-js/v2.0.3/maptiler-sdk.umd.min.js"></script>
    <link crossorigin="anonymous" href="https://cdn.maptiler.com/maptiler-sdk-js/v2.0.3/maptiler-sdk.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Caveat&family=Crete+Round&family=Delius&family=Eczar&family=Josefin+Slab:wght@300&family=Mochiy+Pop+One&family=Nunito&family=Pacifico&family=Ubuntu&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
</head>

<body class="d-flex flex-column vh-100 bg-info">
    <nav class="navbar navbar-expand-lg navbar-light sticky-top bg-info">
        <div class="container-fluid">
            <a class="navbar-brand" style="margin-left: 8px;"><i class="fa fa-globe" style="font-size: 26px;"></i>
                GlobeStatus</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link mx-1" href="/GlobeStatus/homePage">Home Page</a>
                    <ul class="nav nav-pills">
                        <li class="nav-item dropdown mx-1">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                aria-expanded="false">Search City</a>
                            <ul class="dropdown-menu  dropdown-menu-dark">
                                <li><a class="dropdown-item" href="/GlobeStatus/currentWeatherByName">By City Name</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/GlobeStatus/currentWeatherByCoordinates">By City
                                        Coordinates</a></li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div id='map' style='width: 100%; height: 750px;border-radius: 10px;' class="mb-2"></div>
            </div>
            <div class="col-md-6">
                <% if(infoMsg && infoMsg.length > 0) {%>
                <div class="alert  alert-info alert-dismissible fade show text-center" role="alert">
                    <%= infoMsg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
                <div class="accordion" id="accordionExample">
                     <% for(let alert of alertData) { %>
                    <div class="accordion-item mb-1">
                        <h2 class="accordion-header" id="heading<%= alert.id %>">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapse<%= alert.id %>" aria-expanded="false" aria-controls="collapse<%= alert.id %>">
                                <%= alert.title %> - 
                                <% if(alert.severity == "Advisory") { %>
                                    <span class="badge rounded-pill mx-1 bg-primary px-2 py-2"><%= alert.severity %></span>
                                <% } else if(alert.severity == "Watch") { %>
                                    <span class="badge rounded-pill mx-1 bg-warning px-2 py-2"><%= alert.severity %></span>  
                                <% } else { %> 
                                    <span class="badge rounded-pill mx-1 bg-danger px-2 py-2"><%= alert.severity %></span>       
                                <% } %>
                            </button>
                        </h2>
                        <div id="collapse<%= alert.id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= alert.id %>"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul>
                                     <% for(let i=0; i<1; i++) { %>
                                        <li> <%= alert.descriptions %> </li>
                                     <% } %>   
                                </ul>
                            </div>
                            <div class="accordion-footer bg-light border-top px-3 py-2 text-muted">
                                <i class="fa fa-map-marker" style="font-size:17px;color:red"></i> <b>Regions Affected</b> - <%= alert.regions.join(", ") %>
                            </div>
                            <div class="accordion-footer bg-light border-top px-3 py-2 text-muted">
                               <i class="bi bi-clock"></i> <b>Estimated Effective Time</b> - <%= alert.effectiveLocal %>
                            </div>
                            <div class="accordion-footer bg-light border-top px-3 py-2 text-muted">
                               <i class="bi bi-clock"></i> <b>Estimated Ending Time</b> - <%= alert.endsLocal %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer py-3 mt-auto bg-info">
        <div class="container">
            <span class="text-dark">&copy; GlobeStatus 2022</span>
        </div>
    </footer>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        const Locations = <%- JSON.stringify(locations) %>;
        const map = L.map("map").setView([<%= lat %>, <%= lon %>], 6);
        L.tileLayer(`https://api.maptiler.com/maps/streets/{z}/{x}/{y}.png?key=2cBE8DScQJsBf7upDtt0`, {
         attribution: '&copy; <a href="https://www.maptiler.com/">MapTiler</a> contributors',
        }).addTo(map);
        Locations.forEach(loc => {
           L.marker([loc.lat, loc.lng])
           .addTo(map)
           .bindPopup(`<b>${loc.name}</b><br>Lat: ${loc.lat}, Lng: ${loc.lng}`);
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>